{
  "name": "next-sanity-showcase",
  "version": "1.0.0",
  "private": true,
  "description": "A monorepo with Next.js frontend and Sanity CMS",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm run --parallel dev",
    "dev:frontend": "pnpm --filter frontend dev",
    "dev:sanity": "pnpm --filter showcase dev",
    "build": "pnpm run --recursive build",
    "build:frontend": "pnpm --filter frontend build",
    "build:sanity": "pnpm --filter showcase build",
    "lint": "pnpm run --recursive lint",
    "lint:fix": "pnpm run --recursive lint -- --fix",
    "clean": "pnpm run --recursive clean",
    "start": "pnpm --filter frontend start"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.1"
}